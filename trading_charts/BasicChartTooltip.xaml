<UserControl x:Class="trading_charts.BasicChartTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border Background="#FFF" Padding="10" CornerRadius="5" BorderBrush="Black" BorderThickness="1">
        <StackPanel>
            <TextBlock x:Name="TitleTextBlock" FontWeight="Bold" Foreground="Black"/>
            <TextBlock x:Name="ValueTextBlock" Foreground="Black"/>
        </StackPanel>
    </Border>
</UserControl>